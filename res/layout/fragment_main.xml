<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash"
    android:gravity="center"

    android:orientation="vertical"
    android:paddingBottom="@dimen/map_margin_bottom"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    >
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"

        android:gravity="center"
        android:paddingTop="@dimen/map_margin_bottom"
        android:textSize="50dp"
        android:textColor="@color/color_blue"
        android:textStyle="bold"
        android:text="OverThere" />


    <RelativeLayout
        android:id="@+id/rlLoginRegisterLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"

        android:orientation="horizontal" >



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/btnFirstSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_margin_register"
                android:background="@null"
                android:gravity="center"
                android:src="@drawable/btn_signin"
                android:textColor="@color/white" />

            <ImageButton
                android:id="@+id/btnFirstRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:src="@drawable/btn_register"
                android:text="@string/text_register"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>