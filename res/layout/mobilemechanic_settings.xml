<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical" >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="@string/text_service_type"
            android:textColor="@color/color_blue"
            android:textStyle="normal"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/serviceType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_weight="1"
            android:hint="@string/text_service_type"
            android:textStyle="normal"
            android:textColor="@color/color_blue"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_register"
            android:background="@drawable/line" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:text="@string/text_rego_number"
                android:textColor="@color/color_blue"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <AutoCompleteTextView
                android:id="@+id/regoNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@null"
                android:drawablePadding="2dp"
                android:hint="Vehicle Rego Number"
                android:imeOptions="actionDone"
                android:inputType="textNoSuggestions"
                android:paddingLeft="1dp"
                android:paddingRight="2dp"
                android:singleLine="true"
                android:gravity="center"
                android:textColor="@color/color_blue"
                android:dropDownWidth="match_parent"
                android:textSize="@dimen/ub_textsize_search_big">

                <requestFocus />
            </AutoCompleteTextView>



        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_register"
            android:background="@drawable/line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:text="@string/text_jumpleads"
                android:textColor="@color/color_blue"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <org.jraf.android.backport.switchwidget.Switch
                android:id="@+id/jumpLeads"
                style="@style/Widget.Holo.CompoundButton.Switch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginRight="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="@string/text_fuelBottle"
                android:textColor="@color/color_blue"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <org.jraf.android.backport.switchwidget.Switch
                android:id="@+id/fuelBottle"
                style="@style/Widget.Holo.CompoundButton.Switch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="30dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:text="@string/text_change_battery"
                android:textColor="@color/color_blue"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <org.jraf.android.backport.switchwidget.Switch
                android:id="@+id/changeBattery"
                style="@style/Widget.Holo.CompoundButton.Switch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginRight="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:text="@string/text_change_tyre"
                android:textColor="@color/color_blue"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <org.jraf.android.backport.switchwidget.Switch
                android:id="@+id/changeTyre"
                style="@style/Widget.Holo.CompoundButton.Switch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginRight="30dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:text="@string/text_change_belt"
                android:textColor="@color/color_blue"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <org.jraf.android.backport.switchwidget.Switch
                android:id="@+id/changeBelt"
                style="@style/Widget.Holo.CompoundButton.Switch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginRight="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:text="@string/text_waterLeaking"
                android:textColor="@color/color_blue"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <org.jraf.android.backport.switchwidget.Switch
                android:id="@+id/waterLeaking"
                style="@style/Widget.Holo.CompoundButton.Switch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginRight="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:text="@string/text_oilLeaking"
                android:textColor="@color/color_blue"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <org.jraf.android.backport.switchwidget.Switch
                android:id="@+id/oilLeaking"
                style="@style/Widget.Holo.CompoundButton.Switch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginRight="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textColor="@color/color_blue"
                android:text="@string/text_enginNotStart"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <org.jraf.android.backport.switchwidget.Switch
                android:id="@+id/enginNotStart"
                style="@style/Widget.Holo.CompoundButton.Switch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textColor="@color/color_blue"
                android:text="@string/text_carNotMoving"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <org.jraf.android.backport.switchwidget.Switch
                android:id="@+id/carNotMoving"
                style="@style/Widget.Holo.CompoundButton.Switch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="30dp" />
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/include_buttons_bottom"></include>

</LinearLayout>